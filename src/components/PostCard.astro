---
import { slugify, formatDate } from '../js/utils'
import Link from './Link.astro'

import { Image } from 'astro:assets';


const { frontmatter, url, tagType } = Astro.props

const Tag = tagType

const { title, date, author, image, description, category} = frontmatter
---

<article class="card" style="height: -webkit-fill-available;">
    <small>
        <span class="badge">{category}</span>
    </small>
    <a href={url} aria-hidden="true" tabindex="-1" class="imageLink" >
        <Image src={image.src} alt={image.alt} width={400} height={250} format='avif' quality={80} style="width: 50%; height: auto; margin: auto;"/>
    </a>
    <div class="content">
        <div>
        <Tag class="h3"><a href={url}>{title}</a></Tag>
        <small>by <span>{author}</span> â€¢ {formatDate(date)}</small>
        </div>
        <p>{description}</p>
    </div>
</article>
