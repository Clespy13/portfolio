---
import { Icon } from 'astro-icon/components'
import navData from '../data/navData'
import Link from './Link.astro'
---

<nav aria-label="Primary">
    <div class="navbar">
        <a href="/" class="logomark" aria-label="Go home">
            <Icon name ="logo" />
        </a>
        <ul>
            {
                navData.map((item) => <Link href={item.path} text={item.name} style='primary' isFilled={false} data-navlink/>)
            }
        </ul>
    </div>
</nav>

<script>
    import "../js/nav.js"
</script>